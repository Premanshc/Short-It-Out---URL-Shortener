<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <h1>Short It OutðŸ‘‹</h1>
    <p>Generate short urls!</p>
    <form method="post" action="/url">
        <label>Give your URL here:</label>
        <input type="text" id="url" name="url" placeholder="https://www.example.com">
        <button type="submit"> Generate</button>
    </form>

    <% if (locals.id) { %>
        <p>Short URL generated: http://localhost:8000/<%= id %></p>
    <% } %>

    <table>
        <thead>
            <th>S No.</th>
            <th>Redirect URL</th>
            <th>Short ID</th>
            <th>Clicks</th>
        </thead>
        <tbody>
            <% urls.forEach((url, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= url.redirectURL %></td>
                    <td><%= url.shortID %></td>
                    <td><%= url.visitedHistory.length %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>